<div class="preview">
  <img class="preview-image" src="<%= preview || url %>" alt="preview"/>
  <div class="preview-footer">
    <a id="title" href="<%= arcs.baseURL + "resource/" + id %>">
      <%= title %>
    </a>&nbsp;
    <% if (mime_type == 'application/pdf') print('(PDF)'); %>
    <% if (count > 1) { %>
    <span class="pull-right">
      <% if (page > 1) { %>
        <span id="prev-btn">&larr;</span>
      <% } %>
      <%= page %> / <%= count %>
      <span id="next-btn" 
        class="<%= page < count ? '' : 'invisible' %>">&rarr;</span>
    </span>
    <% } %>
  </div>
</div>
