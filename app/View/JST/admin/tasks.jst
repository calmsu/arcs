<table class="table table-striped table-bordered">
  <tr>
    <th>Job</th>
    <th>Status</th>
    <th>Active</th>
    <th>Resource</th>
    <th>Created</th>
    <th>Actions</th>
  </tr>
<% _.each(tasks, function(t, i) { %>
  <tr>
    <td><%= t.job %></td>
    <td>
      <% if (t.status == 0) { %>
      <span class="label label-success">done</span>
      <% } if (t.status == 1) { %>
      <span class="label label-info">pending</span>
      <% } if (t.status == 2) { %>
      <span class="label label-important">error</span>
      <% } %>
    </td>
    <td><%= t.active ? 'yes' : 'no' %></td>
    <td><a href="<%= arcs.baseURL + 'resource/' + t.resource_id %>">Resource</a></td>
    <td><%= relativeDate(new Date(t.created)) %></td>
    <td>
      <button id="redo-btn" class="btn small"
        data-id="<%= t.id %>">Redo</button>
      <button id="redo-btn" class="btn danger small"
        data-id="<%= t.id %>">Delete</button>
    </td>
  </tr>
<% }) %>
</table>
